<%- include("layout/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Product Details</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/sell" method="POST" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone">Phone</label>
                                <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter phone number" required>
                            </div>
                            <div class="mb-3">
                                <label for="price">Price</label>
                                <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter price for sell of item" required>
                            </div>
                            <div class="mb-3">
                                <label for="name">Item to sell</label>
                                <input type="text" name="selltype" class="form-control form-control-lg" placeholder="Enter Item to sell" required>
                            </div>
                            <div class="mb-3">
                                <label for="image">Select Images</label>
                                <input type="file" name="image" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Sell Product" class="btn btn-primary bnt-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("layout/footer") %>