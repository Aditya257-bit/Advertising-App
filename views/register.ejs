    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">User Registration</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/register" method="POST" id="add-form">
                            <div class="mb-3">
                                <span class="details">First Name</span>
                                <input type="text" name="firstname" class="form-control form-control-lg" placeholder="Enter your first name" required>
                            </div>
                            <div class="mb-3">
                                <span class="details">Last Name</span>
                                <input type="text" name="lastname" class="form-control form-control-lg" placeholder="Enter your first name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone">Phone</label>
                                <input type="text" name="phone" class="form-control form-control-lg" placeholder="Enter phone number" required>
                            </div>
                            <div class="mb-3">
                                <label for="price">Password</label>
                                <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required>
                            </div>
                            <div class="mb-3">
                                <label for="name">Confirm Password</label>
                                <input type="password" name="cpassword" class="form-control form-control-lg" placeholder="Confirm your password" required>
                            </div>
                            <div class="mb-3">
                                <input type="radio" name="gender" value="male" id="dot-1">
                                <input type="radio" name="gender" value="female" id="dot-2">
                                <input type="radio" name="gender" value="notprefered" id="dot-3">
                                <span class="gender-title">Gender</span>
                                <div class="category">
                                    <label for="dot-1">
                                        <span class="dot one"></span>
                                        <span class="gender">Male</span>
                                    </label>
                                    <label for="dot-2">
                                        <span class="dot two"></span>
                                        <span class="gender">Female</span>
                                    </label>
                                    <label for="dot-3">
                                        <span class="dot three"></span>
                                        <span class="gender">Prefer not to say</span>
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Sign Up" class="btn btn-primary bnt-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

