<%- include("layout/header") %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">User Login</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/login" method="POST" id="add-form">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Login" class="btn btn-primary bnt-lg">
                        </div>
                        <div class="signup-link">
                            Not a member? <a href="/register">Signup now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("layout/footer") %>