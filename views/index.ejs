<%- include("layout/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if(message) { %>
                    <div class="alert alert-dismissable fade show alert-<%= message.type %> " role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <Strong><%= message.message %></Strong>
                    </div>
               <% } %>
                    <% if(user != '') { %>
                        
                         <% user.forEach((row, index) => { %>                            
                        <div class="card d-inline-flex p-2 mx-3" style="width: 18rem;">
                            <img class="card-img-top" src="<%= row.image %>" alt="Card image cap">
                            <div class="card-body">
                                <h2 class="card-text">Rs.<%= row.price %> </h2>
                                <p class="card-text"><b>Seller :</b> <%= row.name %> </p>
                                <p class="card-text"><b>Contact :</b> <%= row.phone %> </p>
                                <p class="card-text"><b>Product :</b> <%= row.selltype %> </p>
                                <a href="/edit/<%= row._id %>"class="btn btn-primary">Update</a>
                                <a href="/delete/<%= row._id %>"class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    <%  }) %>
                    <% } else { %>
                         <h1 class="text-center text-secondary mt-5">No users Found in Database</h1>
                    <% } %>
            </div>
        </div>
    </div>

<%- include("layout/footer") %>